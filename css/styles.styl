default-color=#0e9f9f
hover-color=#2584ee
item-color=#daedff
body
  font-family 'Roboto', sans-serif
a
  color default-color
  &:hover
    color hover-color
h1
  padding 20px
  text-align left
ul
  list-style none
  margin 0 !important
  padding: 0
#view-container
  position absolute
  text-align: center
  top 0
  bottom 0
  left 0
  right 0
  margin auto
  width: 450px
  height: 80vh
  box-shadow 5px 4px 10px 0px #aaa
  footer, .buttons
    width 100%
    position absolute
    bottom: 0px
    padding-top: 1.2em
    padding-bottom: 1.2em

#view-container
  header
    overflow: auto
    .btn-title
      float right
      line-height: 60px
      padding-right: 1em
      padding-top: .5em
    h1
      float left
      margin-top: 0
  section
    overflow: hidden
    height: 65%
    max-height: 70%
    padding-left: 1.2em
    padding-right: 1.2em

.viewList #view-container
  section.list-wrapper
    overflow: hidden
    height: 65%
    max-height: 70%
    padding-left: 1.2em
    padding-right: 1.2em
    li
      background-color: item-color
      border-radius: 8px
      margin-bottom: .5em
      padding:.8em
      text-align: left
      overflow: auto
      box-shadow: inset -2px -2px 1px 0 rgba(220,220,220,.8)
      .contact-data
        float left
        padding-top: .4em
        max-width: 75%
      .contact-mail
        float right
        .btn-edit
          font-size: 1.8em
          margin-right: 5px


//formularios
.form-group
  input
    width 100%
    margin 0.4em 0px
    font-size: 1em
    padding: .6em .4em .4em .6em
    border-radius: 7px
    border: 1px solid #ddd
    box-sizing: border-box
.select-wrap
  width: 100%
  height: 35px
  margin-top .5em
  border: 1px solid #ddd
  border-radius: 7px
  overflow: hidden
  select
    background: transparent none repeat scroll 0 0
    width: 100%
    font-size 1em
    padding .1em .4em
    border 0 none
    border-radius 0
    line-height: 1
    height: 35px
    -webkit-appearance none
.buttons
  margin-left: -1.2em
  button
    margin 0 .5em
    padding .3em
    border 1px solid hover-color
    border-radius 5px
    color default-color
    background-color: #fff
    font-size: 1.1em
    i
      margin-left: 7px
      font 1.5em
    &:hover
      color hover-color
      background-color: item-color
      border 1px solid hover-color
      cursor pointer
.error
  text-align: left
  font-size: .8em
  color red
  margin-top: 0
